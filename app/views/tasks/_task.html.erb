<%= turbo_frame_tag dom_id(task) do %>
  <div class="border border-gray-300 border-s-5 border-l-[#bbc6f7] rounded-xl p-5 mb-4 hover:shadow-lg transition group bg-white hover:border-l-[#1c3fe2]">
    <div class="flex justify-between items-start">
      <div class="flex items-start space-x-3">
        <div>
          <%= form_with url: complete_task_path(task), method: :patch, data: { turbo_stream: true }, class: "inline" do %>
            <%= check_box_tag "completed", true, task.completed,
              id: "inline-checkbox",
              onchange: "this.form.requestSubmit();",
              class: "w-4 h-4 rounded-full text-green-600 focus:ring-2 border-gray-300 checked:bg-green-600" %>
          <% end %>
        </div>
        <div>
          <h3 class="text-md font-semibold text-gray-800 <%= 'line-through text-gray-400' if task.completed %>">
            <%= task.title %>
          </h3>
          <p class="text-sm font-medium text-gray-500 mt-1">
            <%= task.description %>
          </p>
        </div>
      </div>
      <div class="flex items-center space-x-2">
        <% if task.priority.present? %>
          <% priority_color = case task.priority
            when 'high' then 'bg-red-100 text-red-600'
            when 'medium' then 'bg-yellow-100 text-yellow-700'
            when 'low' then 'bg-slate-100 text-gray-600'
            else 'bg-gray-100 text-gray-600'
          end %>
          <span class="text-sm font-medium px-4 py-1 rounded-3xl <%= priority_color %>">
            <%= task.priority %>
          </span>
        <% end %>
      </div>
    </div>
    <div class="flex justify-between items-center mt-4 text-gray-400 text-sm">
      <div class="flex flex-col">
        <p>
          <%= Date.today == task.due_date ? 'Today' : task.due_date&.strftime("%-I:%M %p") %>
        </p>
        <% if task.completed? && task.completed_at.present? %>
          <p class="text-xs text-gray-400">Done: <%= task.completed_at.strftime("%-I:%M %p") %></p>
        <% end %>
      </div>
      <div class="flex items-center space-x-1">
        <% unless task.completed %>
          <%= link_to edit_task_path(task), class: "p-2 rounded-full hover:bg-gray-100 text-gray-500 hover:text-gray-700" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M15.232 5.232a2.828 2.828 0 114 4L7 21H3v-4L15.232 5.232z" />
            </svg>
          <% end %>
        <% end %>
        <%= button_to task_path(task), method: :delete, data: { turbo_stream: true, turbo_confirm: "Are you sure you want to delete this task?" }, class: "p-2 rounded-full hover:bg-gray-100 text-red-500 hover:text-red-700" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6M1 7h22M9 3h6a2 2 0 012 2v1H7V5a2 2 0 012-2z" />
          </svg>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
