<%= form_with model: task, local: false, class: "space-y-6 bg-white p-6 rounded-lg shadow-md" do |form| %>
  <% if task&.errors&.any? %>
    <div class="mb-4 text-red-600 bg-red-100 p-3 rounded">
      <p><strong><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</strong></p>
      <ul class="list-disc pl-5 mt-2">
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :title, class: "block w-full px-4 py-2 rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-500 focus:ring-opacity-50 transition" %>
  </div>

  <div>
    <%= form.label :due_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.date_select :due_date, { default: Date.today }, { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-500 focus:ring-opacity-50 transition" } %>
  </div>

  <div class="pt-4 flex justify-between items-center">
    <%= form.submit(task.persisted? ? "Update Task" : "Create Task", class: "inline-flex items-center px-3 py-2 bg-purple-600 text-white text-xs font-semibold cursor-pointer rounded-md hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 transition") %>
    <%= link_to "Cancel", task %>
  </div>
<% end %>