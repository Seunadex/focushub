<div class="max-w-3xl mx-auto p-6 bg-white rounded-lg shadow-md space-y-6 mt-5">
  <h1 class="text-3xl font-bold mb-6">Your Tasks</h1>
  <p class="text-gray-600 mb-4">Welcome to your task page, where you can manage all your tasks efficiently.</p>


  <%= turbo_stream_from "tasks_#{current_user.id}" %>
  <%= turbo_frame_tag "tasks" do %>
    <% @tasks.each do |task| %>
      <%= turbo_frame_tag dom_id(task) do %>
        <%= render 'tasks/task', task: task %>
      <% end %>
    <% end %>
    <div class="flex justify-between items-center pb-4 border-b mt-6">
      <%= render "tasks/button" %>
    </div>
  <% end %>
</div>