<div class="w-full mx-auto p-6 bg-[#e7eefe]-50">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold">Tasks</h1>
      <p class="text-gray-500 mb-4 text-lg font-semibold">Manage your tasks efficiently and stay productive.</p>
    </div>
    <%= render "tasks/button" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <div class="border border-gray-200 bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow">
      <div class="flex items-center space-x-3 mb-4">
        <%= lucide_icon("clock", class: "w-6 h-6 text-gray-600") %>
        <p class="text-gray-600 font-semibold uppercase tracking-wide text-sm">Pending Tasks</p>
      </div>
      <p class="text-blue-600 font-bold text-4xl">
        <%= turbo_frame_tag "pending_count" do %>
          <%= @tasks.pending.size %>
        <% end %>
      </p>
      <p class="text-gray-500 text-sm">Tasks remaining</p>
    </div>

    <div class="border border-gray-200 bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow">
      <div class="flex items-center space-x-3 mb-4">
        <%= lucide_icon("circle-check-big", class: "w-6 h-6 text-gray-600") %>
        <p class="text-gray-600 font-semibold uppercase tracking-wide text-sm">Completed</p>
      </div>
      <p class="text-green-600 font-bold text-4xl">
        <%= turbo_frame_tag "completed_count" do %>
          <%= @tasks.completed.size %>
        <% end %>
      </p>
      <p class="text-gray-500 text-sm">Tasks done</p>
    </div>

    <div class="border border-gray-200 bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow">
      <div class="flex items-center space-x-3 mb-4">
        <%= lucide_icon("circle-alert", class: "w-6 h-6 text-gray-600") %>
        <p class="text-gray-600 font-semibold uppercase tracking-wide text-sm">High Priority</p>
      </div>
      <p class="text-red-600 font-bold text-4xl">
        <%= turbo_frame_tag "high_priority_count" do %>
          <%= @tasks.high_priority.size %>
        <% end %>
      </p>
      <p class="text-gray-500 text-sm">Urgent tasks</p>
    </div>
  </div>

  <%= turbo_frame_tag "task_filters" do %>
    <%= form_with url: tasks_path, method: :get, local: false, class: "my-6" do %>
      <div class="flex flex-col md:flex-row md:items-center md:space-x-4 space-y-2 md:space-y-0">
        <input type="text" name="search" placeholder="Search tasks..." value="<%= params[:search] %>" class="border border-gray-300 rounded-md px-4 py-2 w-full bg-transparent" />

        <select name="priority" class="border border-gray-300 rounded-md px-4 py-2 w-full md:w-1/4 bg-transparent">
          <option value="">All Priorities</option>
          <option value="high" <%= 'selected' if params[:priority] == 'high' %>>High</option>
          <option value="medium" <%= 'selected' if params[:priority] == 'medium' %>>Medium</option>
          <option value="low" <%= 'selected' if params[:priority] == 'low' %>>Low</option>
        </select>

        <button type="submit" class="bg-blue-600 text-white px-4 py-1.5 rounded-md hover:bg-blue-700">
          Filter
        </button>
      </div>
    <% end %>
  <% end %>
  <%= turbo_stream_from "tasks_#{current_user.id}" %>
  <%= turbo_frame_tag "task_list" do %>
    <div class="mb-6 bg-[#e6f2ff]/50 rounded-md">
      <nav class="grid grid-cols-3 text-center" aria-label="Tabs">
        <%= link_to "All Tasks", tasks_path, data: { turbo_frame: "task_list" }, class: "whitespace-nowrap py-2 px-1 font-semibold text-md m-2 #{params[:status].blank? ? 'bg-white rounded-md' : 'text-gray-500 hover:text-gray-700'}" %>
        <%= link_to "Pending", tasks_path(status: 'pending'), data: { turbo_frame: "task_list" }, class: "whitespace-nowrap py-2 px-1 font-semibold text-md m-2 #{params[:status] == 'pending' ? 'bg-white rounded-md' : 'text-gray-500 hover:text-gray-700'}" %>
        <%= link_to "Completed", tasks_path(status: 'completed'), data: { turbo_frame: "task_list" }, class: "whitespace-nowrap py-2 px-1 font-semibold text-md m-2 #{params[:status] == 'completed' ? 'bg-white rounded-md' : 'text-gray-500 hover:text-gray-700'}" %>
      </nav>
    </div>
      <%= render 'tasks/task_list', tasks: @tasks, pagy: @pagy %>
  <% end %>
</div>