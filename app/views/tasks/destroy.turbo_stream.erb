<%= turbo_stream.remove "task_#{@task.id}" %>
<%= turbo_stream.replace "tasks", partial: "tasks/task_list", locals: { tasks: @tasks, pagy: @pagy } %>
<%= turbo_stream.update "completed_today_count", partial: "dashboard/task_count", locals: {
  completed: current_user.tasks.completed_today.size,
  total: current_user.tasks.due_today.size
} %>
<%= turbo_stream.update "flash", partial: "shared/flash" %>
<%= turbo_stream.update "task_info_count", partial: "tasks/task_info_count", locals: {
  pending_count: current_user.tasks.pending.size,
  completed_count: current_user.tasks.completed.size,
  high_priority_count: current_user.tasks.high_priority.size
} %>