<div class="flex w-full h-screen bg-gradient-to-br from-purple-50 via-white to-purple-100 dark:bg-gradient-to-br dark:from-slate-950 dark:via-slate-900 dark:to-purple-950">
  <div class="mx-auto mt-30 sm:mt-50 px-8">
    <div class="w-full max-w-md rounded-2xl shadow-lg p-5">
      <h2 class="text-3xl font-extrabold text-center text-purple-600 mb-6">Create Your Account</h2>
      <p class="text-center text-gray-500 mb-8">Sign up to start building habits and collaborating with your team.</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <% if resource.errors.any? %>
          <div class="bg-red-100 text-red-700 p-4 rounded">
            <h4 class="font-semibold"><%= pluralize(resource.errors.count, "error") %> prohibited this account from being created:</h4>
            <ul class="mt-2 list-disc list-inside">
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-500" %>
          <%= f.email_field :email, autofocus: true, required: true,
                class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-500" %>
          <%= f.password_field :password, autocomplete: "new-password", required: true,
                class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-500" %>
          <%= f.password_field :password_confirmation, required: true,
                class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" %>
        </div>

        <div>
          <%= f.submit "Sign up",
                class: "w-full flex justify-center py-2 px-4 bg-purple-600 text-white font-semibold rounded-lg hover:bg-purple-700 transition" %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <p class="text-sm text-gray-500">
          Already have an account?
          <%= link_to "Log in", new_session_path(resource_name), class: "font-medium text-purple-600 hover:text-purple-700" %>
        </p>
      </div>
    </div>
  </div>
</div>
