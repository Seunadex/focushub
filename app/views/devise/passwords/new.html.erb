<div class="flex w-full h-screen bg-gradient-to-br from-purple-50 via-white to-purple-100 dark:bg-gradient-to-br dark:from-slate-950 dark:via-slate-900 dark:to-purple-950">
  <div class="mx-auto mt-30 sm:mt-50 px-8">
    <div class="w-full max-w-md rounded-2xl shadow-lg p-5">
      <h2 class="text-3xl font-extrabold text-center text-purple-600 mb-2">Forgot your password?</h2>
      <p class="text-center text-gray-500 mb-8">Enter your email to receive password reset instructions.</p>

      <% if resource.errors.any? %>
        <div class="bg-red-100 text-red-700 p-4 rounded mb-6">
          <h4 class="font-semibold"><%= pluralize(resource.errors.count, "error") %> prevented sending instructions:</h4>
          <ul class="mt-2 list-disc list-inside">
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-500" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
                class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 text-gray-700" %>
        </div>

        <div>
          <%= f.submit "Send reset instructions",
                class: "w-full flex justify-center py-2 px-4 bg-purple-600 text-white font-semibold rounded-lg hover:bg-purple-700 transition" %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <p class="text-sm text-gray-500">
          Remembered your password?
          <%= link_to "Log in", new_session_path(resource_name), class: "font-medium text-purple-600 hover:text-purple-700" %>
        </p>
      </div>
    </div>
  </div>
  
</div>
