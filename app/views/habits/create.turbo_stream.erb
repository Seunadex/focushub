<%= turbo_stream.prepend "flash", partial: "shared/flash" %>
<%= turbo_stream.update "modal", "" %>
<%= turbo_stream.replace "habit_list_content", partial: "habits/habit_list", locals: { habits: @habits, pagy: @pagy, page: "" } %>
<%= turbo_stream.update "total_habits" do %>
  <%= current_user.habits.active.filter { |habit| habit.completed_today? }.count %>/<%= @habits.size %>
<% end %>