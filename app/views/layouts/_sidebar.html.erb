<aside class="w-auto bg-white dark:bg-gray-900">
  <% active_page = controller_name %>
    <nav class="mt-6">
      <ul>
        <li class="px-4 py-2 hover:bg-gray-100 gap-2 cursor-pointer <%= 'border-l-4 border-purple-500 bg-gray-100' if active_page == 'dashboard' %>">
          <%= link_to dashboard_path, class: 'block text-gray-700 flex items-center gap-2 dark:text-gray-400' do %>
            <%= lucide_icon('layout-dashboard') %>
            <span class="hidden md:inline">Dashboard</span>
          <% end %>
        </li>
        <li class="px-4 py-2 hover:bg-gray-100 gap-2 cursor-pointer <%= 'border-l-4 border-purple-500 bg-gray-100' if active_page == 'tasks' %>">
          <%= link_to tasks_path, class: 'block text-gray-700 flex items-center gap-2 dark:text-gray-400' do %>
            <%= lucide_icon('square-check-big') %>
            <span class="hidden md:inline">Tasks</span>
          <% end %>
        </li>
        <li class="px-4 py-2 hover:bg-gray-100 gap-2 cursor-pointer <%= 'border-l-4 border-purple-500 bg-gray-100' if active_page == 'habits' %>">
          <%= link_to "", class: 'block text-gray-700 flex items-center gap-2 dark:text-gray-400' do %>
            <%= lucide_icon('radar') %>
            <span class="hidden md:inline">Habits</span>
          <% end %>
        </li>
        <li class="px-4 py-2 hover:bg-gray-100 gap-2 cursor-pointer <%= 'border-l-4 border-purple-500 bg-gray-100' if active_page == 'groups' %>">
          <%= link_to "", class: 'block text-gray-700 flex items-center gap-2 dark:text-gray-400' do %>
            <%= lucide_icon('users') %>
            <span class="hidden md:inline">Groups</span>
          <% end %>
        </li>
        <li class="px-4 py-2 hover:bg-gray-100 flex gap-2 cursor-pointer <%= 'border-l-4 border-purple-500 bg-gray-100' if active_page == 'statistics' %>">
          <%= link_to "", class: 'block text-gray-700 flex items-center gap-2 dark:text-gray-400' do %>
            <%= lucide_icon('chart-line', class: "") %>
            <span class="hidden md:inline">Statistics</span>
          <% end %>
        </li>
      </ul>
    </nav>
  </aside>
