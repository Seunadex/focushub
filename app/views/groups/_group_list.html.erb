<div class="gap-3 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
  <% groups.each do |group| %>
    <%= turbo_frame_tag "group_#{group.id}" do %>
      <%= render 'groups/group', group: group, extra_class: "" %>
    <% end %>
  <% end %>
</div>
<% if groups.empty? %>
  <div class="text-center text-gray-500 mt-6">
    <p class="text-gray-500">No groups found.</p>
  </div>
<% end %>