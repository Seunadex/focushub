<% flash.each do |type, message| %>
  <% if type == "notice" %>
    <div class="bg-green-500 text-white px-4 py-2 rounded shadow mb-2 flex items-center animate__animated animate__bounceIn">
      <%= lucide_icon("check-circle") %>
      <span class="ml-2"><%= message %></span>
    </div>
  <% elsif type == "alert" %>
    <div class="bg-red-500 text-white px-4 py-2 rounded shadow mb-2 flex items-center">
      <%= lucide_icon("alert-triangle") %>
      <span class="ml-2"><%= message %></span>
    </div>
  <% else %>
    <div class="bg-yellow-500 text-white px-4 py-2 rounded shadow mb-2 flex items-center">
      <%= lucide_icon("info") %>
      <span class="ml-2"><%= message %></span>
    </div>
  <% end %>
<% end %>